<ivy-module version="2.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="jp.root42" module="indolently" />

  <configurations>
    <conf name="compile" />
    <conf name="runtime" extends="compile" />
    <conf name="test" />
  </configurations>

  <dependencies>

    <dependency org="net.jodah" name="typetools" rev="0.5.0" conf="runtime->master(*)" />

    <!-- optional dependencies for optimized performance -->
    <dependency org="net.openhft" name="koloboke-api-jdk8" rev="0.6.8" conf="compile->master(*)" />
    <dependency org="net.openhft" name="koloboke-impl-jdk8" rev="0.6.8" conf="test->master(*)" />

    <dependency org="junit" name="junit" rev="4.12" conf="test->master(*)" />
    <dependency org="org.hamcrest" name="hamcrest-core" rev="1.3" conf="test->master(*)" />
    <dependency org="org.hamcrest" name="hamcrest-library" rev="1.3" conf="test->master(*)" />
    <dependency org="org.assertj" name="assertj-core" rev="3.8.0" conf="test->master(*)" />
    <dependency org="org.mockito" name="mockito-core" rev="2.11.0" conf="test->master(*)" />
    <dependency org="net.bytebuddy" name="byte-buddy" rev="1.7.7" conf="test->master(*)" />
    <dependency org="org.objenesis" name="objenesis" rev="2.6" conf="test->master(*)" />
    <dependency org="pl.pragmatists" name="JUnitParams" rev="1.1.0" conf="test->master(*)" />

  </dependencies>

</ivy-module>
